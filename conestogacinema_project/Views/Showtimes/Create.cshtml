@model conestogacinema_project.Models.showtime

@{
    ViewBag.Title = "Host Showtime";
}

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 title">
    <div class="row">
        <h4>Host a Showtime</h4>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Date</label>
            <div class="col-md-10">
                @Html.DropDownList("showtime_date", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.showtime_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Time</label>
            <div class="col-md-10">
                @Html.DropDownList("showtime_time", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.showtime_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Movie</label>
            <div class="col-md-10">
                @Html.DropDownList("movie_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.movie_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Room</label>
            <div class="col-md-10">
                @Html.DropDownList("room_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.room_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="hidden">
            @Html.DropDownList("host_student_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.host_student_id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-xs-10 col-sm-8 col-md-6 col-lg-5">
                <div class="checkbox">
                    <label class="checkbox-white">
                        <input type="checkbox" onclick="enableHost(this)">
                        <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
                        I agree to book the selected room for the duration of the movie, and bring
                        a copy of the movie to the showtime.
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="host" value="Host Showtime" class="btn btn-primary btn-outline" disabled />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
